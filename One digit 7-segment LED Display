// C++ code
//

int a = 2;
int b = 3;
int c = 4;
int d = 5;
int e = 6;
int f = 7;
int g = 8;
int dp = 9;


int delay_t = 1000;


void setup()
{
  pinMode(a ,OUTPUT);
  pinMode(b ,OUTPUT);
  pinMode(c ,OUTPUT);
  pinMode(d ,OUTPUT);
  pinMode(e ,OUTPUT);
  pinMode(f ,OUTPUT);
  pinMode(g ,OUTPUT);
  pinMode(dp ,OUTPUT);

  
}

void loop()
{
  // number ZERO 0 
  digitalWrite(a ,HIGH);
  digitalWrite(b ,HIGH);
  digitalWrite(c ,HIGH);
  digitalWrite(d ,HIGH);
  digitalWrite(e ,HIGH);
  digitalWrite(f ,HIGH);
  digitalWrite(g ,LOW);
  digitalWrite(dp ,LOW);

  delay(delay_t);
  
  
  // number ONE 1
  digitalWrite(a ,LOW);
  digitalWrite(b ,HIGH);
  digitalWrite(c ,HIGH);
  digitalWrite(d ,LOW);
  digitalWrite(e ,LOW);
  digitalWrite(f ,LOW);
  digitalWrite(g ,LOW);
  digitalWrite(dp ,LOW);
  
  
 delay(delay_t);
  
  
  // number TWO 2
  digitalWrite(a ,HIGH);
  digitalWrite(b ,HIGH);
  digitalWrite(c ,LOW);
  digitalWrite(d ,HIGH);
  digitalWrite(e ,HIGH);
  digitalWrite(f ,LOW);
  digitalWrite(g ,HIGH);
  digitalWrite(dp ,LOW);
  
  
 delay(delay_t);
  
  
  
  // number THREE  3
  digitalWrite(a ,HIGH);
  digitalWrite(b ,HIGH);
  digitalWrite(c ,HIGH);
  digitalWrite(d ,HIGH);
  digitalWrite(e ,LOW);
  digitalWrite(f ,LOW);
  digitalWrite(g ,HIGH);
  digitalWrite(dp ,LOW);
  
  
 delay(delay_t);
  
  
  
  // number FOUR  4
  digitalWrite(a ,LOW);
  digitalWrite(b ,HIGH);
  digitalWrite(c ,HIGH);
  digitalWrite(d ,LOW);
  digitalWrite(e ,LOW);
  digitalWrite(f ,HIGH);
  digitalWrite(g ,HIGH);
  digitalWrite(dp ,LOW);
  
  
 delay(delay_t);
  
  
  // number FIVE  5
  digitalWrite(a ,HIGH);
  digitalWrite(b ,LOW);
  digitalWrite(c ,HIGH);
  digitalWrite(d ,HIGH);
  digitalWrite(e ,LOW);
  digitalWrite(f ,HIGH);
  digitalWrite(g ,HIGH);
  digitalWrite(dp ,LOW);
  
  
 delay(delay_t);
  
  
   // number SIX  6
  digitalWrite(a ,HIGH);
  digitalWrite(b ,LOW);
  digitalWrite(c ,HIGH);
  digitalWrite(d ,HIGH);
  digitalWrite(e ,HIGH);
  digitalWrite(f ,HIGH);
  digitalWrite(g ,HIGH);
  digitalWrite(dp ,LOW);
  
  
 delay(delay_t);
  
  
   // number SEVEN  7
  digitalWrite(a ,HIGH);
  digitalWrite(b ,HIGH);
  digitalWrite(c ,HIGH);
  digitalWrite(d ,LOW);
  digitalWrite(e ,LOW);
  digitalWrite(f , LOW);
  digitalWrite(g ,LOW);
  digitalWrite(dp ,LOW);
  
  
 delay(delay_t);
  
  
   // number EIGHT 8 
  digitalWrite(a ,HIGH);
  digitalWrite(b ,HIGH);
  digitalWrite(c ,HIGH);
  digitalWrite(d ,HIGH);
  digitalWrite(e ,HIGH);
  digitalWrite(f ,HIGH);
  digitalWrite(g ,HIGH);
  digitalWrite(dp ,LOW);
  
  
 delay(delay_t);
  
   // number NINE 9   
  digitalWrite(a ,HIGH);
  digitalWrite(b ,HIGH);
  digitalWrite(c ,HIGH);
  digitalWrite(d ,HIGH);
  digitalWrite(e ,LOW);
  digitalWrite(f ,HIGH);
  digitalWrite(g ,HIGH);
  digitalWrite(dp ,LOW);
  
  
 delay(delay_t);
  
  
  
  
}
